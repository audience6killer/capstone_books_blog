<%- include("partials/header.ejs") %>
<div class="container my-5">
    <div class="p-5 text-center bg-body-secondary rounded-3">
      <h1 class="text-body-emphasis">Add New Entry</h1>
      <p class="lead">
        First search a book either by title or by ISBN, then write a review for it.
      </p>
    </div>
</div>
<span></span>
<div class="container my-5">
    <div class="row-cols-1 my-4">
        <div class="col">
            <h2>Search book</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-xl-12">
            <form action="/search-book" method="POST">
                <div class="row align-items-center">
                    <div class="col-lg-4 col-sm-8 col-xl-4 my-lg-0 mb-sm-3 my-xs-3">
                        <input type="text" class="form-control" placeholder="Title" name="bookTitle" aria-label="book-title">
                    </div>
                    <div class="d-flex col-lg-2 col-sm-4 col-xl-2 my-lg-0 mb-sm-3 my-xs-3">
                        <input class="form-check-input mx-2" type="radio" value="title" name="searchType">
                        <label class="form-check-label" for="titleCheckBox">
                         By Title 
                        </label>
                    </div>
                    <div class="col-lg-4 col-sm-8 col-xl-4">
                        <input type="text" class="form-control" placeholder="ISBN" name="bookISBN" aria-label="book-isbn">
                    </div>
                    <div class="d-flex col-lg-2 col-sm-4 col-xl-2">
                        <input class="form-check-input mx-2" type="radio" value="isbn" name="searchType">
                        <label class="form-check-label" for="isbnCheckBox">
                            By ISBN
                        </label>
                    </div>   
                </div>
                <div class="row align-items-center py-4">
                    <div class="col-lg-12 col-xl-12 justify-content-center">
                        <input type="submit" class="btn btn-primary btn-lg" value="Search" >
                    </div>

                </div>
                
               
            </form>
        </div>

    </div>
    
</div>
<%- include("partials/footer.ejs") %>